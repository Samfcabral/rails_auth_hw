<div class="container">
	<h1>Edit Article</h1>
	<%= form_for @article do |f| %>
	    <%= f.text_field :title, placeholder: "Title" %> <br><br>
	    <%= f.text_field :author, placeholder: "Author" %> <br><br>
	    <%= f.text_area :content, placeholder: "Content" %> <br><br>
	    <%= f.submit "Save Article" %>
	<% end %>
</div>